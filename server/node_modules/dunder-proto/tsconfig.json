{
  "compilerOptions": {
    "target": "es2017",            // modern JavaScript target
    "module": "commonjs",          // module system for Node.js (backend)
    "jsx": "react-jsx",            // enable JSX support (React 17+)
    "outDir": "dist",              // output compiled files here
    "rootDir": "src",              // source folder for your TS files
    "strict": true,                // enable strict type checking
    "esModuleInterop": true,       // compatibility with CommonJS modules
    "skipLibCheck": true
  },
  "include": ["src"]
}
